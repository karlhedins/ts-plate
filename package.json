{
  "name": "ts-plate",
  "version": "1.0.0",
  "description": "A plate full of TypeScript",
  "author": "Karl Hedin SÃ¥nemyr <karl.hedin@jayway.com>",
  "scripts": {
    "start": "docz dev",
    "build": "docz build",
    "lint": "run-p 'lint:ts' 'lint:css'",
    "lint:ts": "tslint --project . --config tslint.prod.json",
    "lint:css": "stylelint './src/**/*.tsx'"
  },
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/styled-components": "^4.0.2",
    "babel-plugin-styled-components": "^1.8.0",
    "docz": "^0.12.5",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "docz-plugin-netlify": "^1.1.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "styled-components": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.{js,ts,tsx}": [
      "stylelint --config .stylelintrc --fix",
      "git add"
    ]
  }
